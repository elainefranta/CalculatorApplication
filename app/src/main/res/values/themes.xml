<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btnNumbers</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/btnNumbers</item>
        <item name="colorSecondaryVariant">@color/opCol</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Theme used for the buttons with numbers -->
    <style name = "ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="backgroundTint">@color/btnNumbers</item>
        <item name = "android:textColor">@color/black</item>
        <item name="android:onClick">onDigit</item>
    </style>

    <!-- Theme for the operations (+,-,x,/)-->

    <style name="OpStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:backgroundTint">@color/opCol</item>
        <item name = "android:textColor">@color/black</item>

    </style>
    <!-- Theme used for Clear, backspace, ANS, and decimal -->
    <style name="ExtraButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name = "android:textColor">@color/black</item>
    </style>
    <!-- Theme for evaluate button -->
    <style name="EqualButtons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:backgroundTint">@color/opCol</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>